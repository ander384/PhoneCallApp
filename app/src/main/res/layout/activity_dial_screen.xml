<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialScreenActivity"
    android:background="@color/dialScreenBackground">

    <TextView
        android:gravity="center"
        tools:text="(###)###-####"
        android:textSize="37sp"
        android:id="@+id/tv_dialed_number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_above="@id/ll_2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="1"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="2"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="3"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_above="@id/ll_3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="4"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="5"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="6"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_above="@id/ll_4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="7"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="8"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="9"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:gravity="center"
        android:layout_above="@id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="*"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="0"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="#"
            android:onClick="onNumberButtonClick"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="@color/numberButtonText"
            android:background="@drawable/number_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/delete_btn"
            android:onClick="onDeleteButtonClick"
            android:src="@drawable/ic_backspace_black_24dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"
            android:id="@+id/btn_call"
            android:src="@drawable/ic_call_white_24dp"
            android:background="@drawable/call_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/call_button" />
    </LinearLayout>




</RelativeLayout>